{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/tests/*": ["tests/*"],
      "@/*": ["src/*"],
    },
  },
  "vueCompilerOptions": {
    "target": 2.7,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
